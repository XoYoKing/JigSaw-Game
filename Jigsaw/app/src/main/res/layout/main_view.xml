<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#f4f4f4"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="63"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/image_view_one"
            android:background="#000000"
            android:alpha="0.7"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_weight="35"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/image_view_two"
                android:background="#000000"
                android:alpha="0.7"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ViewFlipper
                    android:id="@+id/mid_view"
                    android:background="#ffffff"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/three_four_view"
                        layout="@layout/three_four"/>

                    <include
                        android:id="@+id/five_seven_view"
                        layout="@layout/five_seven"/>

                    <include
                        android:id="@+id/seven_ten_view"
                        layout="@layout/seven_ten"/>

                </ViewFlipper>

                <LinearLayout
                    android:id="@+id/picture_view"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="51"
                        android:alpha="0.7"
                        android:background="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="49"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_weight="32"
                            android:alpha="0.7"
                            android:background="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_weight="4"
                            android:background="#575757"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                                <Button
                                    android:id="@+id/default_button"
                                    android:layout_weight="62"
                                    style="@style/DefaultButton"
                                    android:text="本 地 图 片"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <View
                                    android:layout_weight="120"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <Button
                                    android:id="@+id/card_button"
                                    android:layout_weight="62"
                                    style="@style/SDCardButton"
                                    android:text="手 机 相 册"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                        </LinearLayout>

                        <View
                            android:layout_weight="32"
                            android:alpha="0.7"
                            android:background="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                        android:layout_weight="52"
                        android:alpha="0.7"
                        android:background="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_weight="30"
                            android:id="@+id/close_picture_one"
                            android:alpha="0.7"
                            android:background="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ViewFlipper
                            android:layout_weight="8"
                            android:background="#ffffff"
                            android:alpha="0.95"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/default_view"
                                layout="@layout/default_select"/>

                            <include
                                android:id="@+id/card_view"
                                layout="@layout/sd_card_select"/>

                        </ViewFlipper>

                        <Button
                            android:layout_weight="30"
                            android:id="@+id/close_picture_two"
                            android:alpha="0.7"
                            android:background="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                        android:layout_weight="51"
                        android:alpha="0.7"
                        android:background="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/guide_layout"
                    android:orientation="vertical"
                    android:alpha="0.97"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_weight="50"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="48"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_weight="30"
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_weight="8"
                            android:background="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="24"
                                android:text="@string/game_guide_one"
                                style="@style/GameGuideLeft"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_weight="27"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_weight="24"
                                android:text="@string/game_guide_two"
                                style="@style/GameGuideCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_weight="24"
                                android:text="@string/game_guide_three"
                                style="@style/GameGuideCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_weight="27"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_weight="24"
                                android:text="@string/game_guide_four"
                                style="@style/GameGuideRight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <View
                            android:layout_weight="30"
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                        android:layout_weight="51"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_weight="29"
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_weight="10"
                            android:background="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_weight="22"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <View
                                    android:layout_weight="36"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:layout_weight="31"
                                    android:text="@string/first_guide"
                                    style="@style/GuideContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:layout_weight="31"
                                    android:text="@string/second_guide"
                                    style="@style/GuideContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:layout_weight="31"
                                    android:text="@string/third_guide"
                                    style="@style/GuideContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:layout_weight="31"
                                    android:text="@string/finally_guide"
                                    style="@style/GuideContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                            </LinearLayout>

                            <View
                                android:layout_weight="22"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <View
                            android:layout_weight="29"
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                        android:layout_weight="50"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_weight="61"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/image_view_four"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

            <FrameLayout
                android:layout_weight="54"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/three_button_layout"
                    android:visibility="invisible"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_weight="30"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_weight="26"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/t_f_button"
                                style="@style/SwitchButton"
                                android:text="12"
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_weight="27"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_weight="26"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/f_s_button"
                                style="@style/SwitchButton"
                                android:text="42"
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_weight="27"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_weight="26"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/s_t_button"
                                style="@style/SwitchButton"
                                android:text="72"
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_weight="30"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/im_b_tb_layout"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="60"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_weight="29"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ImageButton
                            android:layout_weight="2"
                            android:id="@+id/image_button"
                            android:background="@drawable/t_f_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"/>

                        <ImageView
                            android:layout_weight="29"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="52"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_weight="13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/switch_button"
                                style="@style/SwitchButton"
                                android:text="12"
                                android:layout_width="90px"
                                android:layout_height="90px"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_weight="13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_weight="14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <Button
                            android:layout_weight="11"
                            android:id="@+id/new_game"
                            style="@style/TwoButton"
                            android:text="新 游 戏"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_weight="14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <Button
                            android:layout_weight="11"
                            android:id="@+id/guide_button"
                            style="@style/TwoButton"
                            android:text="游 戏 指 南"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_weight="14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="60"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_picture_button"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_weight="20"
                        android:id="@+id/close_picture_three"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:layout_weight="28"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true">

                                <Button
                                    style="@style/SelectButton"
                                    android:layout_width="100px"
                                    android:layout_height="100px"
                                    android:layout_gravity="center"/>

                                <Button
                                    android:id="@+id/decide_picture"
                                    style="@style/SwitchButton"
                                    android:text="X"
                                    android:textSize="25dp"
                                    android:layout_width="85px"
                                    android:layout_height="85px"
                                    android:layout_gravity="center"/>

                            </FrameLayout>

                        </RelativeLayout>

                    </FrameLayout>

                    <Button
                        android:layout_weight="20"
                        android:id="@+id/close_picture_four"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/close_guide_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_weight="20"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:layout_weight="28"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:background="#000000"
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true">

                                <Button
                                    style="@style/SelectButton"
                                    android:layout_width="100px"
                                    android:layout_height="100px"
                                    android:layout_gravity="center"/>

                                <Button
                                    android:id="@+id/close_guide"
                                    style="@style/SwitchButton"
                                    android:text="X"
                                    android:textSize="25dp"
                                    android:layout_width="85px"
                                    android:layout_height="85px"
                                    android:layout_gravity="center"/>

                            </FrameLayout>

                        </RelativeLayout>

                    </FrameLayout>

                    <Button
                        android:layout_weight="20"
                        android:background="#000000"
                        android:alpha="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_weight="35"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/image_view_three"
                android:background="#000000"
                android:alpha="0.7"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="63"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/image_view_five"
            android:background="#000000"
            android:alpha="0.7"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</LinearLayout>
